<Window x:Class="SeatingManager.AddReservation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeatingManager"
        mc:Ignorable="d"
        Title="AddReservation" Height="244.409" Width="409.265" Loaded="Window_Loaded">
    <Window.Resources>
        <local:SeatingManagerDBDataSet x:Key="seatingManagerDBDataSet"/>
        <CollectionViewSource x:Key="customersViewSource" Source="{Binding customers, Source={StaticResource seatingManagerDBDataSet}}"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource customersViewSource}">
        <Label x:Name="label" Content="Label" HorizontalAlignment="Left" Margin="54,38,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="customersComboBox" DisplayMemberPath="customerName" ItemsSource="{Binding}" Margin="116,46,0,0" SelectedValuePath="customerID" HorizontalAlignment="Left" VerticalAlignment="Top" />
            <!--<ComboBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel/>
                </ItemsPanelTemplate>
            </ComboBox.ItemsPanel>
        </ComboBox>-->
        <Label x:Name="label_Copy" Content="Label" HorizontalAlignment="Left" Margin="54,96,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="116,100,0,0" VerticalAlignment="Top" Width="65"/>
        <ComboBox x:Name="comboBox_Copy" HorizontalAlignment="Left" Margin="194,100,0,0" VerticalAlignment="Top" Width="65"/>
        <ComboBox x:Name="comboBox_Copy1" HorizontalAlignment="Left" Margin="292,100,0,0" VerticalAlignment="Top" Width="65"/>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="54,159,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.231,0.471"/>

    </Grid>
</Window>
